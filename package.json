{
  "name": "axly",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern, flexible, and powerful HTTP client built on top of Axios with advanced features like dynamic configurations, request cancellation, retry logic, caching, middleware support, and optional Socket.IO integration.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "axly": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --fix",
    "watch": "tsc --watch",
    "release": "npm version patch && npm publish --access public --tag latest",
    "prettier:check": "prettier -c .",
    "prettier": "prettier -w -u .",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": "prettier -w -u ."
  },
  "license": "MIT",
  "homepage": "https://www.npmjs.com/package/axly",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Harshalkatakiya/axly.git"
  },
  "bugs": {
    "url": "https://github.com/Harshalkatakiya/axly/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": {
    "name": "Harshal Katakiya",
    "email": "katakiyaharshl001@gmail.com",
    "url": "https://github.com/Harshalkatakiya"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@harshalkatakiya/prettier-config": "^1.0.16",
    "@types/node": "^22.10.9",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "keywords": [
    "http",
    "axios",
    "fetch",
    "http-client",
    "typescript",
    "react",
    "nextjs",
    "nodejs",
    "socket.io",
    "middleware",
    "caching",
    "retry-logic"
  ],
  "dependencies": {
    "axios": "^1.7.9",
    "socket.io-client": "^4.8.1"
  }
}
